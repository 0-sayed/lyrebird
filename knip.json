{
  "$schema": "https://unpkg.com/knip@5.43.0/schema.json",
  "ignoreExportsUsedInFile": true,
  "workspaces": {
    ".": {
      "entry": [
        "apps/*/src/main.ts",
        "apps/*/src/index.ts",
        "libs/*/src/index.ts",
        "libs/testing/src/**/*.ts"
      ],
      "project": ["apps/**/*.ts", "libs/**/*.ts"],
      "ignore": [
        "**/*.spec.ts",
        "**/*.e2e-spec.ts",
        "apps/*/test/**",
        "test/**",
        "coverage/**",
        "dist/**",
        "**/*.d.ts",
        "apps/dashboard/**"
      ],
      "ignoreDependencies": [
        "source-map-support",
        "@nestjs/schematics",
        "@eslint/eslintrc",
        "@types/supertest",
        "supertest",
        "ts-loader",
        "swagger-ui-express"
      ]
    },
    "apps/dashboard": {
      "entry": [
        "src/main.tsx",
        "src/__tests__/mocks/**/*.ts"
      ],
      "project": ["src/**/*.ts", "src/**/*.tsx"],
      "ignore": [
        "**/*.test.ts",
        "**/*.test.tsx"
      ]
    }
  }
}
