{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "workspaces": {
    ".": {
      "entry": [
        "apps/gateway/src/main.ts",
        "apps/ingestion/src/main.ts",
        "apps/analysis/src/main.ts",
        "libs/*/src/index.ts",
        "libs/testing/src/**/*.ts"
      ],
      "project": [
        "apps/gateway/src/**/*.ts",
        "apps/ingestion/src/**/*.ts",
        "apps/analysis/src/**/*.ts",
        "libs/*/src/**/*.ts",
        "test/**/*.ts"
      ],
      "ignore": [
        "**/*.spec.ts",
        "**/*.e2e-spec.ts",
        "**/test/**",
        "coverage/**",
        "dist/**",
        "**/*.d.ts",
        "apps/dashboard/**"
      ],
      "ignoreDependencies": [
        "source-map-support",
        "@nestjs/schematics",
        "@eslint/eslintrc",
        "@types/supertest",
        "supertest",
        "ts-loader",
        "swagger-ui-express"
      ]
    },
    "apps/dashboard": {
      "entry": [
        "src/main.tsx",
        "src/__tests__/mocks/**/*.ts"
      ],
      "project": ["src/**/*.ts", "src/**/*.tsx"],
      "ignore": [
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "vitest": {
        "entry": ["src/**/*.{test,spec}.{ts,tsx}", "src/__tests__/setup.ts"]
      },
      "playwright": {
        "entry": ["e2e/**/*.{ts,tsx}"]
      }
    }
  }
}
