{
  "name": "lyrebird",
  "version": "0.0.1",
  "description": "A distributed microservices platform for real-time sentiment analysis of Bluesky content",
  "author": "Sayed Ashraf",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0-sayed/lyrebird.git"
  },
  "homepage": "https://github.com/0-sayed/lyrebird#readme",
  "bugs": {
    "url": "https://github.com/0-sayed/lyrebird/issues"
  },
  "keywords": [
    "sentiment-analysis",
    "microservices",
    "nestjs",
    "rabbitmq",
    "bluesky",
    "real-time",
    "typescript"
  ],
  "scripts": {
    "build": "nest build",
    "build:gateway": "nest build gateway",
    "build:ingestion": "nest build ingestion",
    "build:analysis": "nest build analysis",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/lyrebird/main",
    "start:all": "concurrently \"nest start gateway --watch\" \"nest start ingestion --watch\" \"nest start analysis --watch\"",
    "start:gateway": "nest start gateway --watch",
    "start:ingestion": "nest start ingestion --watch",
    "start:analysis": "nest start analysis --watch",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/gateway/test/jest-e2e.json",
    "test:e2e:all": "jest --config ./apps/gateway/test/jest-e2e.json && jest --config ./apps/analysis/test/jest-e2e.json && jest --config ./apps/ingestion/test/jest-e2e.json",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "validate": "pnpm lint && pnpm type-check && pnpm test && pnpm knip && pnpm build",
    "type-check": "tsc --noEmit && pnpm --filter dashboard type-check",
    "db:generate": "node --env-file-if-exists=.env ./node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "node --env-file-if-exists=.env ./node_modules/drizzle-kit/bin.cjs migrate",
    "db:push": "node --env-file-if-exists=.env ./node_modules/drizzle-kit/bin.cjs push",
    "db:studio": "node --env-file-if-exists=.env ./node_modules/drizzle-kit/bin.cjs studio",
    "docker:build": "./docker/build-all.sh",
    "docker:up": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "docker:logs": "docker compose -f docker-compose.yml -f docker-compose.prod.yml logs -f",
    "docker:health": "./docker/health-check.sh",
    "docker:clean": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down -v --rmi local",
    "postinstall": "chmod +x docker/*.sh || true",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "dependencies": {
    "@atproto/api": "^0.18.17",
    "@huggingface/transformers": "^3.5.1",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.6",
    "@nestjs/terminus": "^11.0.0",
    "amqp-connection-manager": "^5.0.0",
    "amqplib": "^0.10.9",
    "async-mutex": "^0.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.17.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.12",
    "@types/amqplib": "^0.10.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "jest": "^30.0.0",
    "knip": "^5.82.1",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0"
  },
  "pnpm": {
    "overrides": {
      "qs": "6.14.1"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(spec|integration\\.spec)\\.ts$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/apps/dashboard/e2e/"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest-setup.ts"
    ],
    "collectCoverageFrom": [
      "apps/**/*.ts",
      "libs/**/*.ts",
      "!apps/dashboard/**",
      "!**/*.module.ts",
      "!**/main.ts",
      "!**/*.d.ts",
      "!**/index.ts",
      "!**/test/**",
      "!**/*.spec.ts",
      "!**/*.e2e-spec.ts",
      "!**/*.integration.spec.ts",
      "!**/health/**",
      "!**/filters/**",
      "!**/interceptors/**",
      "!apps/gateway/src/controllers/job-events.controller.ts",
      "!apps/gateway/src/services/job-events.service.ts"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 55,
        "functions": 65,
        "lines": 65,
        "statements": 65
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@app/rabbitmq(|/.*)$": "<rootDir>/libs/rabbitmq/src/$1",
      "^@app/shared-types(|/.*)$": "<rootDir>/libs/shared-types/src/$1",
      "^@app/bluesky(|/.*)$": "<rootDir>/libs/bluesky/src/$1",
      "^@app/testing(|/.*)$": "<rootDir>/libs/testing/src/$1",
      "^@app/gateway(|/.*)$": "<rootDir>/apps/gateway/src/$1",
      "^@app/analysis(|/.*)$": "<rootDir>/apps/analysis/src/$1",
      "^@app/ingestion(|/.*)$": "<rootDir>/apps/ingestion/src/$1"
    }
  },
  "packageManager": "pnpm@10.23.0"
}
