{
  "include": ["apps/gateway", "apps/ingestion", "apps/analysis", "libs", "test"],
  "exclude": ["apps/dashboard", "node_modules", "dist"],
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/database": ["libs/database/src"],
      "@app/database/*": ["libs/database/src/*"],
      "@app/rabbitmq": ["libs/rabbitmq/src"],
      "@app/rabbitmq/*": ["libs/rabbitmq/src/*"],
      "@app/shared-types": ["libs/shared-types/src"],
      "@app/shared-types/*": ["libs/shared-types/src/*"],
      "@app/bluesky": ["libs/bluesky/src"],
      "@app/bluesky/*": ["libs/bluesky/src/*"],
      "@app/testing": ["libs/testing/src"],
      "@app/testing/*": ["libs/testing/src/*"],
      "@app/logger": ["libs/logger/src"],
      "@app/logger/*": ["libs/logger/src/*"],
      "@app/gateway": ["apps/gateway/src"],
      "@app/gateway/*": ["apps/gateway/src/*"],
      "@app/analysis": ["apps/analysis/src"],
      "@app/analysis/*": ["apps/analysis/src/*"],
      "@app/ingestion": ["apps/ingestion/src"],
      "@app/ingestion/*": ["apps/ingestion/src/*"]
    }
  }
}
